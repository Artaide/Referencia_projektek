<?xml version="1.0" encoding="utf-8" ?>
<elements>

	<element name="Divine Armor (Medium)" type="Magic Item" source="Axel's Homebrew Collected from Many Places" id="ID_CUSTOM_MAGIC_ITEM_DIVINE_ARMOR_MEDIUM">
		<description>
			<p>While wearing this armor, you have advantage on saving throws made against magical effects, and when you are healed by a spell, any 1's rolled by the healer for the spell can be rerolled once.</p>
		</description>
		<setters>
			<set name="category">Magic Armor</set>
			<set name="cost" currency="gp">-</set>
			<set name="slot">body</set>
			<set name="type" addition="medium">Armor</set>
			<set name="attunement">true</set>
			<set name="rarity">Rare</set>
			<set name="armor">ID_INTERNAL_ARMOR_GROUP_MEDIUM</set>
			<set name="name-format">Divine + {{parent}}</set>
		</setters>
	</element>
	
	<element name="Frostmage Armor" type="Magic Item" source="Axel's Homebrew Collected from Many Places" id="ID_CUSTOM_MAGIC_ITEM_FROSTMAGE_ARMOR">
		<description>
			<p>This set of pauldron and breastplate grants you a +1 bonus to AC.</p>
			<p class="indent">While attuned to this armor, you ignore resistance to cold damage when casting spells that deal cold damage, and immunity counts as resistance instead.</p>
			<p class="indent">Additionally, while attuned to this armor, a number of times equal to your proficiency modifier, you can change the damage type of damage dealing spells you cast to cold.</p>
		</description>
		<setters>
			<set name="keywords">frost, leather</set>
			<set name="category">Magic Armor</set>
			<set name="cost" currency="gp">-</set>
			<set name="slot">body</set>
			<set name="type" addition="leather">Armor</set>
			<set name="attunement">true</set>
			<set name="rarity">Rare</set>
			<set name="armor">Leather</set>
			<set name="enhancement">1</set>
			<set name="armorClass">11 + Dex modifier</set>
			<set name="name-format">Frostmage Armor</set>
		</setters>
		<rules>
			<stat name="ac:armored:enhancement" value="1" bonus="enhancement" />
		</rules>
	</element>
	
